@page "/Wiki/{id?}"

@model BlazorAO.Pages.WikiModel

@section head {
    <link rel="stylesheet" href="~/css/wiki.css"/>
} 

<div class="row">
    <div class="col-2 border-right">
        <!--nav bar-->
        <ul class="list-unstyled">
            @foreach (var topic in Model.WikiReader.Topics)
            {
                <li><a href="/Wiki/@topic.Key">@topic.Value.Title</a></li>
            }
        </ul>
    </div>
    
    <div class="col-4">        
        <h1>@Model.WikiReader.Title</h1>
        @Model.WikiReader.Content
    </div>

    <div class="col-6">
        <div class="file-banner pt-5 pb-2 pl-2">
            <a href="" id="external-link" target="_blank"></a>
        </div>
        <pre id="code-view"></pre>          
    </div>
</div>

@section script {
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="~/js/wiki-reader.js"></script>
}