<li class="nav-item px-3">
    <NavLink class="nav-link" href="@ResolveHref()" Match="NavLinkMatch.All">
        @Text
    </NavLink>
</li>

@code {
    [Parameter]
    public string Text { get; set; }

    [Parameter]
    public string Href { get; set; }

    [CascadingParameter]
    public string RootPath { get; set; }

    private string ResolveHref() => $"{RootPath}{Href}";
}